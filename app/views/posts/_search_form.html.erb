<section class="search_form">
<%= form_tag posts_path, :method => 'get' do %>
  <p>
    <%= text_area_tag :search, params[:search] %>
  </p>
  <p>
    <%= radio_button_tag :status, "published" %>
    <%= label_tag "status_published", "Published" %>
  </p>
  <p>
    <%= radio_button_tag :status, "unpublished" %>
    <%= label_tag "status_unpublished", "Unpublished" %>
  </p>
  <p>
    <%= submit_tag "Search titles", :name => nil %>
  </p>
<% end %>
</section>
<% if params[:search].present? %>
  <%= content_tag :div, "data-#{["published", "unpublished"].detect { |status| status == params[:status]} || "error"}" => true do %>
    Number of results: <%= @posts.size if @posts %>
  <% end -%>
<% end -%>

